  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/pomodoro-timer.git"
  },
  "homepage": "https://pomodoro.kajkowalski.nl",
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.3.3"
  }
