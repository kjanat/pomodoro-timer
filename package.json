{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "An impressive Pomodoro timer application to enhance productivity.",
  "main": "src/js/app.ts",
  "type": "module",
  "scripts": {
    "start": "bun run --hot src/js/app.ts",
    "dev": "bun --hot src/index.html",
    "build": "bun run build.ts",
    "preview": "bun dist/index.html",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome check --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": ["pomodoro", "timer", "productivity", "focus", "time-management"],
  "author": "Kaj Kowalski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/pomodoro-timer.git"
  },
  "homepage": "https://pomodoro.kajkowalski.nl",
  "packageManager": "bun@latest",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@typescript/native-preview": "^7.0.0-dev.20251108.1",
    "@vitest/coverage-v8": "^4.0.8",
    "http-server": "~14.1.1",
    "jsdom": "^27.1.0",
    "playwright": "^1.56.1",
    "prettier": "~3.6.2",
    "prettier-config-standard": "^7.0.0",
    "typescript": "^5.9.3",
    "vitest": "~4.0.8"
  },
  "dependencies": {
    "lucide": "^0.553.0"
  }
}
