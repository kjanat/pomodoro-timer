{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "An impressive Pomodoro timer application to enhance productivity.",
  "main": "src/js/app.js",
  "scripts": {
    "start": "http-server src -p 3000 -o",
    "dev": "http-server src -p 3000 -o",
    "build": "cp -r src dist",
    "preview": "http-server dist -p 3000 -o",
    "format": "prettier --write \"src/**/*.{js,html,css,json}\" \"*.{js,json,md}\" --ignore-path .gitignore",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "vitest run",
    "test:node": "node --test"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "productivity",
    "focus",
    "time-management"
  ],
  "author": "Kaj Kowalski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/pomodoro-timer.git"
  },
  "homepage": "https://pomodoro.kajkowalski.nl",
  "packageManager": "pnpm@10.11.0",
  "prettier": "prettier-config-standard",
  "standard": {
    "env": [
      "browser",
      "serviceworker"
    ],
    "globals": [
      "updateDisplay"
    ]
  },
  "devDependencies": {
    "http-server": "~14",
    "prettier": "~3",
    "prettier-config-standard": "*",
    "standard": "*",
    "vitest": "~3"
  }
}
