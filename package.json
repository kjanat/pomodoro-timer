{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "An impressive Pomodoro timer application to enhance productivity.",
  "main": "src/js/app.ts",
  "type": "module",
  "scripts": {
    "start": "bun run --hot src/js/app.ts",
    "dev": "http-server src -p 3000 -o",
    "build": "bun build src/js/icons.ts --outdir=dist/js --target=browser && bun build src/js/audio.ts --outdir=dist/js --target=browser && bun build src/js/timer.ts --outdir=dist/js --target=browser && bun build src/js/app.ts --outdir=dist/js --target=browser && cp -r src/css dist/ && cp src/index.html dist/ && cp src/manifest.json dist/ && cp src/sw.ts dist/sw.js",
    "preview": "http-server dist -p 3000 -o",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\" \"*.{ts,json,md}\" --ignore-path .gitignore",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "productivity",
    "focus",
    "time-management"
  ],
  "author": "Kaj Kowalski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/pomodoro-timer.git"
  },
  "homepage": "https://pomodoro.kajkowalski.nl",
  "packageManager": "bun@latest",
  "prettier": "prettier-config-standard",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@vitest/coverage-v8": "^4.0.8",
    "http-server": "~14.1.1",
    "jsdom": "^27.1.0",
    "playwright": "^1.56.1",
    "prettier": "~3.6.2",
    "prettier-config-standard": "^7.0.0",
    "typescript": "^5.9.3",
    "vitest": "~4.0.8"
  },
  "dependencies": {
    "lucide": "^0.553.0"
  }
}
