{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "An impressive Pomodoro timer application to enhance productivity.",
  "main": "dist/js/app.js",
  "scripts": {
    "start": "pnpm run build && http-server dist -p 3000 -o",
    "dev": "pnpm run build && http-server dist -p 3000 -o",
    "build": "rimraf dist && tsc && cp src/index.html dist/index.html && cp src/manifest.json dist/manifest.json && cp src/sw.js dist/sw.js && cp src/CNAME dist/CNAME && cp -r src/css dist/css",
    "preview": "http-server dist -p 3000 -o",
    "format": "prettier --write \"src/**/*.{js,html,css,json}\" \"*.{js,json,md}\" --ignore-path .gitignore",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "pnpm run build && vitest run",
    "test:node": "node --test"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "productivity",
    "focus",
    "time-management"
  ],
  "author": "Kaj Kowalski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/pomodoro-timer.git"
  },
  "homepage": "https://pomodoro.kajkowalski.nl",
  "packageManager": "pnpm@10.11.0",
  "prettier": "prettier-config-standard",
  "standard": {
    "env": [
      "browser",
      "serviceworker"
    ],
    "globals": [
      "updateDisplay"
    ]
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^3.2.3",
    "http-server": "~14",
    "jsdom": "^26.1.0",
    "prettier": "~3",
    "prettier-config-standard": "*",
    "rimraf": "^6.0.1",
    "standard": "*",
    "typescript": "^5.8.3",
    "vitest": "~3"
  }
}
